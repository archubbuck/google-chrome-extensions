{
  "manifest_version": 3,
  "name": "Screener Saver",
  "version": "1.0.0",
  "description": "Save and search UserTesting.com screener questions and answers",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.usertesting.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.usertesting.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
